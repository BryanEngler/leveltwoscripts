repeat='y'

while [ $repeat == "y" ];
	do
		echo "Check The Blacklist"
		echo
		read -p "Enter The Version (6012/6110/6120):" Version
		read -p "Enter The Hotfix Number (XXXX):" Hotfix
		cd 'D:/Liferay/Dev Tool/cache/'
		echo

		grep hotfix-$Hotfix-$Version blacklist.txt

		if [ $? == 0 ]
			then
				echo
				echo The hotfix is blacklisted

			else
				echo The hotfix is not blacklisted
		fi

		echo
		read -p "Enter 'y' to run again, or 'n' to Exit:" repeat;
		echo

	done
