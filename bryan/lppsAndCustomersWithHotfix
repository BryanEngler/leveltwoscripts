repeat='y'

while [ $repeat == "y" ];
	do
		echo "Show LPP's and Customers With This Hotfix"
		echo
		read -p "Enter Hotfix Number (XXXX):" Number
		read -p "Enter Version (6012/6110/6120):" Version
		cd 'D:/Liferay/Dev Tool/cache/'
		echo

		grep hotfix-$Number-$Version hotfix-list.txt

		echo
		read -p "Enter 'y' to run again, or 'n' to Exit:" repeat;
		echo

	done
